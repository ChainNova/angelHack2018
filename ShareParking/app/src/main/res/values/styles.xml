<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateDrawable">@anim/loading_rotate</item>
        <item name="android:minWidth">@dimen/margin_38</item>
        <item name="android:maxWidth">@dimen/margin_38</item>
        <item name="android:minHeight">@dimen/margin_38</item>
        <item name="android:maxHeight">@dimen/margin_38</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_text_black_24" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="item_text_white_32" parent="text_base">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_32px</item>
    </style>

    <style name="item_text_gray_32" parent="text_base">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_36px</item>
    </style>

    <style name="item_text_black_32" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_32px</item>
    </style>

    <style name="item_text_black_30" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="item_text_black_36" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_36px</item>
    </style>

    <style name="item_text_red_32" parent="text_base">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_32px</item>
    </style>

    <style name="item_text_blue_32" parent="text_base">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_32px</item>
    </style>

    <style name="item_text_black_48" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_48px</item>
    </style>

    <style name="btn_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_32px</item>
    </style>

</resources>
